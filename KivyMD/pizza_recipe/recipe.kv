ScreenManager:
    id:scr_manager

    IntroScreen:
        name: 'intro'

    PrepareDough:
        name: 'prepare_dough'

    PrebakeDough:
        name: 'prebake_dough'

    PutOnToppings:
        name: 'put_on_toppings'

    BakePizza:
        name: 'bake_pizza'

    EatPizza:
        name: 'eat_pizza'

<IntroScreen>:
    MDCard:
        size_hint: .7, .7
        pos_hint: {'center_x': .5, 'center_y': .5}
        md_bg_color: 0.4,0.4,0,0.5
        orientation: 'vertical'
        MDLabel:
            text:"Pizza Tutorial"
            font_style:"H5"
            halign:"center"
            size_hint: 1, .1
        FitImage:
            source: "food_pizza_whole_quarter.png"
            size_hint: 1, .7
        MDRaisedButton:
            text:"Start"
            on_release: root.parent.current = 'prepare_dough'
            pos_hint: {'center_x': .5}
            md_bg_color: 0.4,0.4,0,0.5
<PrepareDough>
